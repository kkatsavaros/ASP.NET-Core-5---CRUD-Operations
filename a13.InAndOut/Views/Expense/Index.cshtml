@model IEnumerable<a13.InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new Expense</a> 
        </div>
    </div>

   
    @if (Model.Count()>0)   // If we  actually have data.
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.ExpenseName</td>
                        <td width="30%">@expense.Amount</td>
                        <td width="40%">
                           <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id">Update</a>
                                <a class="btn btn-danger mx-1" asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }


</div>